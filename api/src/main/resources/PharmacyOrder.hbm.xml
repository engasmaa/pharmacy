<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.icchange.pharmacy">

	<joined-subclass name="PharmacyOrder" table="pharmacy_pharmacyorder" extends="org.openmrs.Order">
		<key column="order_id" />
		<many-to-one name="drugOrder" class="org.openmrs.DrugOrder" column="drugorder_id"  not-null="true" />
		<set name="items">
			<key column="order_id"/>
			<one-to-many class="PharmacyItem"/>
		</set>
	</joined-subclass>
	<class name="PharmacyItem" table="pharmacy_pharmacyitem" >
		<id name="id" type="int" column="pharmacyitem_id" unsaved-value="0">
			<generator class="native" />
		</id>
		<discriminator column="pharmacyitem_id" insert="false" />
		<property name="itemId" type="java.lang.Integer" column="item_id"/>
		<property name="quantity" type="java.lang.Integer" column="quantity"/>
		<property name="unit" type="java.lang.String" column="unit" length="255"/>
		<property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true" />
	</class>
</hibernate-mapping>
